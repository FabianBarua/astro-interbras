---
import { motion } from 'framer-motion'
import PrimaryButton from './PrimaryButton.astro'

import { getI18NGlobal, getValueFromKey } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18NGlobal({ currentLocale });

const t = (key: string) => {
  return getValueFromKey(key, i18n);
};
---

<section class='  h-full flex-col lg:flex-row flex  gap-6 '>
    <div
      class=' w-full h-[20rem] lg:h-full relative bg-interbrasGreen-900 rounded-[40px] overflow-hidden'
    >
      <img loading="lazy"  src='/home/cocinaSection/1.webp' class=' leftmask h-[115%] top-1/2 -translate-y-[55%] absolute -right-16 object-cover' alt='hervidoras interbras' />
      <div class=' absolute lg:bottom-10 lg:left-10 left-5 bottom-5'>
        <h2 class='text-3xl md:text-4xl mb-3 font-bold text-white'>
          {t('home.CocinasSection.title')}
        </h2>
        <PrimaryButton
          class=' w-min'
          to='/productos/cocinas'
        />
      </div>
    </div>
    
    <div
      class=' w-full h-[20rem] lg:h-full relative bg-interbrasGreen-900 rounded-[40px] overflow-hidden'
    >
      <img loading="lazy"  src='/home/KettleAndCafeterasSection/1.webp' class='  h-[115%] top-1/2 -translate-y-[55%] absolute right-0 object-cover' alt='hervidoras interbras' />
      <div class=' absolute lg:bottom-10 lg:left-10 left-5 bottom-5'>
        <h2 class='text-3xl md:text-4xl mb-3 font-bold text-white'>
          {t('home.HervidorasAndCafeterasSection.1.title')}
        </h2>
        <PrimaryButton
          class=' w-min'
          to='/productos/hervidoras'
        />
      </div>
    </div>

    <div
      class=' w-full h-[20rem] lg:h-full relative bg-interbrasGreen-900 rounded-[40px] overflow-hidden'
    >        
    <img loading="lazy"  src='/home/KettleAndCafeterasSection/2.webp' class='  h-[110%] top-1/2 -translate-y-[52%] absolute left-0 object-cover' alt='hervidoras interbras' />

      <div class=' absolute lg:bottom-10 bottom-5 lg:right-10 right-5 '>
        <h2 class='text-3xl md:text-4xl  mb-3 font-bold text-white'>
          {t('home.HervidorasAndCafeterasSection.2.title')}
        </h2>
        <PrimaryButton
          class=' ml-auto w-min'
          to='/productos/cafeteras'
        />
      </div>
    </div>
  </section>

  <style>

  .leftmask {
    -webkit-mask-image: linear-gradient(to left, black 60%, transparent 100%);
    mask-image: linear-gradient(to left, black 60%, transparent 100%);
  }

  </style>