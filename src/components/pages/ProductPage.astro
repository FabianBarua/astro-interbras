---
import { getCategory } from "@/shared/utils";
import  { ProductPage as ReactProductPage } from "@/components/react/ProductPage";

interface Props {
  category: string;
}

const { category } = Astro.props;

const categorySelected = getCategory({
  id: category,
})

const { currentLocale } = Astro;
const lang = currentLocale? currentLocale : '';

---

<ReactProductPage category={categorySelected} lang={lang} client:idle/>