---
import { ProductsAnimated } from "@/components/react/ProductsAnimated";
import AirFryerSection from "../AirFryerSection.astro";
import MixSection from "../MixSection.astro";
import CocinasSection from "../CocinasSection.astro";
import HervidorasAndCafeterasSection from "../HervidorasAndCafeterasSection.astro";
import OtherProductsSection from "../OtherProductsSection.astro";

// const url
const currentPath = Astro.url;
---

<ProductsAnimated currentUrl={currentPath} client:load />

<main class="sm:w-[80%] w-[90%] flex flex-col gap-6 mx-auto">
  <!-- <AirFryerSection />
  <MixSection />
  <CocinasSection />
  <HervidorasAndCafeterasSection />
  <OtherProductsSection /> -->
</main>

<style is:global>
  /* Gaps personalizados para dispositivos móviles */
  .custom-gap-0 {
    gap: 10px;
  }
  .custom-gap-1 {
    gap: 10px;
  }
  .custom-gap-2 {
    gap: 10px;
  }
  .custom-gap-3 {
    gap: 20px;
  }
  .custom-gap-4 {
    gap: 10px;
  }
  .custom-gap-5 {
    gap: 10px;
  }
  .custom-gap-6 {
    gap: 10px;
  }

  /* Media Query para pantallas pequeñas (sm) */
  @media (min-width: 640px) {
    .custom-gap-0 {
      gap: 20px;
    }
    .custom-gap-1 {
      gap: 20px;
    }
    .custom-gap-2 {
      gap: 30px;
    }
    .custom-gap-3 {
      gap: 20px;
    }
    .custom-gap-4 {
      gap: 30px;
    }
    .custom-gap-5 {
      gap: 20px;
    }
    .custom-gap-6 {
      gap: 20px;
    }
  }
</style>
